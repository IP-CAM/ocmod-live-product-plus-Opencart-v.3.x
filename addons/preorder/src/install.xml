<modification>
	<name>[underr] Live Options+ Preorder addon</name>
	<code>live-options-preorder</code>
	<version>1.0.0</version>
	<author>Andrii Burkatskyi aka underr</author>
	<link>https://git.io/JfjUj</link>

	<file path="admin/controller/extension/module/live_options.php" error="log" info="preorder">
		<operation error="log">
			<search>
				<![CDATA['zerobaseprice']]>
			</search>
			<add position="replace">
				<![CDATA['zerobaseprice', 'preorder');]]>
			</add>
		</operation>
	</file>
	<file path="admin/language/en-gb/extension/module/live_options.php" error="log" info="preorder">
		<operation error="log">
			<search>
				<![CDATA[entry_text_zerobaseprice]]>
			</search>
			<add position="after">
				<![CDATA[$_['entry_text_preorder'] = 'Preorder';]]>
			</add>
		</operation>
	</file>
	<file path="admin/language/ua-uk/extension/module/live_options.php" error="log" info="preorder">
		<operation error="log">
			<search>
				<![CDATA[entry_text_zerobaseprice]]>
			</search>
			<add position="after">
				<![CDATA[$_['entry_text_preorder'] = 'Передзамовлення';]]>
			</add>
		</operation>
	</file>
	<file path="admin/language/ru-ru/extension/module/live_options.php" error="log" info="preorder">
		<operation error="log">
			<search>
				<![CDATA[entry_text_zerobaseprice]]>
			</search>
			<add position="after">
				<![CDATA[$_['entry_text_preorder'] = 'Предзаказ';]]>
			</add>
		</operation>
	</file>

	<file path="catalog/controller/extension/module/live_options.php" error="log" info="radio button tooltips">
		<operation error="log">
			<search>
				<![CDATA[$is_selected = $this->isSelected(]]>
			</search>
			<add position="before">
				<![CDATA[
							if (!$option_subtract && $option_quantity == 0) {
								$option_price .= $this->text_preorder;
							}]]>
			</add>
		</operation>
	</file>
</modification>
