<modification>
	<name>[underr] Live Options+ > Ajax Preloader</name>
	<code>live-options-ajax-preloader</code>
	<version>1.0.0</version>
	<author>Andrii Burkatskyi aka underr</author>
	<link>https://git.io/JvBf1</link>

	<file path="catalog/controller/extension/module/live_options.php" error="log">
		<operation error="log">
			<search>
				<![CDATA[$data['live_options'] = array();]]>
			</search>
			<add position="after">
				<![CDATA[
				$svg = '<span id="live-options-svg-container" style="margin-left: 5px; display: none;"><svg id="live-options-svg" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" xml:space="preserve"><image id="live-options-image" x="0" y="0" xlink:href="data:image/png;base64, "></image></svg></span>';

				$data['live_options']['svg'] = $svg;]]>
			</add>
		</operation>
		<operation error="log">
			<search>
				<![CDATA[function update()]]>
			</search>
			<add position="before">
				<![CDATA[
var svg_size = Math.round(parseFloat($(g_price_id).css('font-size').replace( /^\D+/g, '')) / 1.125);

$('#live-options-svg').attr('width', svg_size);
$('#live-options-svg').attr('height', svg_size);

$('#live-options-svg').attr('viewBox', '0 0 ' + svg_size + ' ' + svg_size);
$('#live-options-svg').attr('enable-background', '0 0 ' + svg_size + ' ' + svg_size);

$('#live-options-image').attr('width', svg_size);
$('#live-options-image').attr('height', svg_size);]]>
			</add>
		</operation>
		<operation error="log">
			<search>
				<![CDATA[beforeSend: function () {}]]>
			</search>
			<add position="replace">
				<![CDATA[beforeSend: function () { $('#live-options-svg-container').show(); }]]>
			</add>
		</operation>
		<operation error="log">
			<search>
				<![CDATA[complete: function () { tags_post_data = null; }]]>
			</search>
			<add position="replace">
				<![CDATA[complete: function () { tags_post_data = null; $('#live-options-svg-container').hide(); }]]>
			</add>
		</operation>
	</file>

	<file path="catalog/view/theme/*/template/product/product.twig" error="log">
		<operation error="log">
			<search>
				<![CDATA[{% if live_options.status %}<span id="{{ live_options.css.price_id }}" data-id="{{ live_options.css.price_id }}">{{ price }}</span>{% else %}{{ price }}{% endif %}]]>
			</search>
			<add position="replace">
				<![CDATA[{% if live_options.status %}<span id="{{ live_options.css.price_id }}" data-id="{{ live_options.css.price_id }}">{{ price }}</span>{% else %}{{ price }}{% endif %}{% if live_options.status %}{{ live_options.svg }}{% endif %}]]>
			</add>
		</operation>
	</file>

	<file path="catalog/view/theme/*/template/common/header.twig" error="log">
		<operation error="log">
			<search>
				<![CDATA[{% for style in styles %}]]>
			</search>
			<add position="before">
				<![CDATA[<link href="catalog/view/theme/default/stylesheet/live_options_svg_animation.css" rel="stylesheet">]]>
			</add>
		</operation>
	</file>
</modification>
